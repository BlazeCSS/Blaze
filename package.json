{
  "name": "blaze-workspace",
  "private": true,
  "version": "0.0.0",
  "description": "Open Source UI Toolkit",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "atoms.build": "cd packages/atoms && stencil build",
    "atoms.start": "cd packages/atoms && sd concurrent \"stencil build --dev --watch\" \"stencil-dev-server\" ",
    "atoms.serve": "cd packages/atoms && stencil-dev-server",
    "atoms.test": "jest --no-cache",
    "atoms.test.snapshots": "jest --updateSnapshot --no-cache",
    "atoms.test.watch": "jest --watch --no-cache",
    "scss.lint": "gulp lint --package=scss",
    "scss.build": "gulp --package=scss",
    "scss.start": "gulp dev --package=scss"
  },
  "pre-commit": [
    "yarn scss.build",
    "yarn atoms.test",
    "yarn atoms.build"
  ],
  "devDependencies": {
    "pre-commit": "~1.2.2",
    "lerna": "~2.11.0",
    "@stencil/core": "latest",
    "@stencil/dev-server": "latest",
    "@stencil/utils": "latest",
    "@types/jest": "~23.3.1",
    "jest": "~23.4.2",
    "file-exists": "~5.0.1",
    "gulp": "~3.9.1",
    "gulp-connect": "^5.5.0",
    "gulp-cssnano": "~2.1.3",
    "gulp-header": "~2.0.5",
    "gulp-options": "~1.1.1",
    "gulp-rename": "~1.3.0",
    "gulp-sass": "~4.0.1",
    "gulp-sass-lint": "~1.4.0",
    "gulp-size": "~3.0.0",
    "np": "~3.0.4",
    "run-sequence": "~2.2.1"
  }
}
