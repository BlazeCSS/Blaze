    "@stencil/sass": "1.5.2",
    "@types/cssnano": "5.1.0",
    "@types/jest": "27.4.1",
    "@types/puppeteer": "5.4.5",
    "cssnano": "5.1.5",
    "jest": "27.5.1",
    "jest-cli": "27.5.1",
    "postcss": "8.4.12",
    "prettier": "2.6.1",
    "puppeteer": "13.5.1",
    "stylelint": "14.6.1",
    "stylelint-config-rational-order": "0.1.2",
    "stylelint-config-standard": "25.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-scss": "4.2.0"
  },
  "dependencies": {}
