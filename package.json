{
  "name": "blaze-workspace",
  "private": true,
  "version": "0.0.0",
  "description": "Open Source UI Toolkit",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "scss.lint": "gulp lint --package=scss",
    "scss.build": "gulp --package=scss",
    "scss.dev": "gulp dev --package=scss",
    "atoms.build": "cd packages/atoms && stencil build",
    "atoms.dev": "cd packages/atoms && stencil build --dev --watch --serve",
    "atoms.test.spec": "cd packages/atoms && stencil test --spec",
    "atoms.test.e2e": "cd packages/atoms && stencil test --e2e",
    "atoms.test": "cd packages/atoms && stencil test --spec --e2e",
    "site.build": "cd packages/site && stencil build --prerender",
    "site.dev": "cd packages/site && stencil build --dev --watch --serve",
    "site.serve": "cd packages/site && stencil build --prerender --watch --serve",
    "test": "yarn scss.lint && yarn atoms.test",
    "dev": "yarn scss.dev & yarn atoms.dev & yarn",
    "build": "yarn scss.build && yarn atoms.build && yarn site.build",
    "prettier": "prettier --write **/*",
    "commit": "yarn prettier && git add . && commit",
    "release": "yarn test && yarn build && lerna publish"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn test"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "7.2.0",
    "@commitlint/config-conventional": "7.1.2",
    "@commitlint/prompt-cli": "7.2.0",
    "@commitlint/travis-cli": "7.2.0",
    "@stencil/core": "0.13.2",
    "@stencil/router": "0.3.0",
    "@stencil/sass": "0.1.1",
    "@types/jest": "23.3.4",
    "@types/puppeteer": "1.6.0",
    "blaze-atoms": "latest",
    "blaze-css": "latest",
    "file-exists": "5.0.1",
    "gulp": "3.9.1",
    "gulp-connect": "5.6.1",
    "gulp-cssnano": "2.1.3",
    "gulp-options": "1.1.1",
    "gulp-rename": "1.4.0",
    "gulp-sass": "4.0.1",
    "gulp-sass-lint": "1.4.0",
    "gulp-size": "3.0.0",
    "husky": "1.1.1",
    "jest": "23.5.0",
    "lerna": "3.4.1",
    "onchange": "5.0.2",
    "pixelmatch": "4.0.2",
    "prettier": "1.14.3",
    "puppeteer": "1.7.0",
    "run-sequence": "2.2.1"
  }
}
