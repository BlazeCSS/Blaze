{
  "name": "blaze-atoms",
  "version": "0.0.1",
  "description": "Open Source UI Toolkit - Atoms",
  "main": "dist/collection/index.js",
  "types": "dist/collection/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "files": [
    "dist/"
  ],
  "browser": "dist/blaze-atoms.js",
  "scripts": {
    "build": "stencil build",
    "dev": "sd concurrent \"stencil build --dev --watch\" \"stencil-dev-server\" ",
    "serve": "stencil-dev-server",
    "start": "npm run dev",
    "test": "jest --no-cache",
    "test.snapshots": "jest --updateSnapshot --no-cache",
    "test.watch": "jest --watch --no-cache"
  },
  "pre-commit": [
    "test"
  ],
  "dependencies": {
    "@stencil/core": "next"
  },
  "devDependencies": {
    "@stencil/dev-server": "latest",
    "@stencil/utils": "latest",
    "@types/jest": "^21.1.1",
    "jest": "^21.2.1",
    "jest-serializer-html-string": "^1.0.1",
    "pre-commit": "^1.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BlazeUI/blaze.git"
  },
  "author": "Gregory Pratt",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BlazeUI/blaze/issues"
  },
  "homepage": "https://www.blazeui.com",
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "snapshotSerializers": [
      "jest-serializer-html-string"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  }
}
