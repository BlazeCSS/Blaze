{
  "name": "blaze-atoms",
  "version": "1.0.0-1",
  "description": "Open Source UI Toolkit - Atoms",
  "main": "dist/blaze-atoms.js ",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "files": [
    "dist/"
  ],
  "browser": "dist/blaze-atoms.js",
  "scripts": {
    "build": "stencil build",
    "dev": "sd concurrent \"stencil build --dev --watch\" \"stencil-dev-server\" ",
    "serve": "stencil-dev-server",
    "start": "npm run dev",
    "test": "jest --no-cache",
    "test.snapshots": "jest --updateSnapshot --no-cache",
    "test.watch": "jest --watch --no-cache"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BlazeUI/blaze.git"
  },
  "keywords": [
    "javascript",
    "html",
    "sass",
    "scss",
    "css",
    "bem",
    "itcss",
    "bemit",
    "ui",
    "ux",
    "framework",
    "components",
    "webcomponents",
    "stencil",
    "stenciljs"
  ],
  "author": "Gregory Pratt",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BlazeUI/blaze/issues"
  },
  "homepage": "https://www.blazeui.com",
  "dependencies": {
    "@stencil/core": "next"
  },
  "devDependencies": {
    "@stencil/dev-server": "latest",
    "@stencil/utils": "latest",
    "@types/jest": "latest",
    "jest": "latest"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  }
}
